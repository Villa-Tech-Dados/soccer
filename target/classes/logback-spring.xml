<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml" />
    
    <property name="LOG_NAME" value="sara-atendimento"/>    

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>
    
    <springProfile name="default">
        <appender name="FILE_LOCAL"
            class="ch.qos.logback.core.rolling.RollingFileAppender">
            <!-- Support multiple-JVM writing to the same log file -->
            <file>./${LOG_NAME}.log</file>
            <rollingPolicy
                class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>./${LOG_NAME}-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
                <!-- cada arquivo deve ter no máximo 1MB, manter 5 dias de histórico, mas no máximo 10MB -->
                <maxFileSize>1MB</maxFileSize>
                <maxHistory>5</maxHistory>
                <totalSizeCap>10MB</totalSizeCap>
            </rollingPolicy>
            <encoder>
                <pattern>${FILE_LOG_PATTERN}</pattern>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="STDOUT" />
            <appender-ref ref="FILE_LOCAL" />
        </root>
    </springProfile>

    <springProfile name="local">
        <appender name="FILE_LOCAL"
            class="ch.qos.logback.core.rolling.RollingFileAppender">
            <!-- Support multiple-JVM writing to the same log file -->
            <file>./target/${LOG_NAME}.log</file>
            <rollingPolicy
